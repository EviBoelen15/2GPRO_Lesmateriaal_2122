        <Button x:Name="btnVerhoogMet" Content="verhoog met: " HorizontalAlignment="Left" Margin="241,284,0,0" VerticalAlignment="Top" Width="144" Height="32" Click="btnVerhoogMet_Click"/>
        <TextBox x:Name="txtVerhoogGetal" HorizontalAlignment="Left" Height="32" Margin="390,284,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109"/>

    </Grid>
</Window>
